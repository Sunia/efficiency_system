<h2>Log in</h2>

<%= form_tag(resource, as: resource_name, url: session_path(resource_name)) do  %>

                <%= form_tag sessions_path , :class => 'form-signin' do %> 

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class="btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
