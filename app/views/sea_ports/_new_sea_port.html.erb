<br>
<%= form_for(SeaPort.new) do |f| %>
	<div class="control-group">

		<div class="col-sm-12">
			<div class="col-sm-6">
				<label class="" for="input01">Departure Port</label>  
			
               <%= f.text_field :starting_port_name, autofocus: true, required: true, class: "form-control", placeholder: "Departure Port", style: "margin-bottom:10px"%>
			
			</div>

			<div class="col-sm-6">
				<label class="" for="input01">Arrival Port</label>  
				<div class="s">  
	               <%= f.text_field :reached_port_name, autofocus: true,required: true, class: "form-control", placeholder: "Arrival Port", style: "margin-bottom:10px" %>
				</div> 
			</div>

		</div>

        <!-- date-->
		<div class="col-sm-12">
			<div class="col-sm-6">
				<label class="" for="input01">Start of Sea Passage Date(SMT)</label>  
				<div class="s">
		          <input type="text" class="startDate form-control" name="date" id="dateStartReport" style = "margin-bottom:10px" required %>
				</div> 
			</div>

			<div class="col-sm-6">
				<label class="" for="input01">
					Start of Sea Passage Time(SMT)
				</label>  
				<div class="s">
		          <input type="number" name="hours" required placeholder="hours" min="0" max="23" class="form-control time-width"  %>
		          
		          <input type="number" name="minutes" required placeholder="minutes"  class="form-control time-width" min="0" max="59" %>

				  <input type="number" name="seconds" required placeholder="seconds"  class="form-control time-width" min="0" max="59" %>
				          
				</div> 
			</div>
		</div>

        <!-- Zone time--> 
		<div class="col-sm-12" style="margin-top: 10px;"> 
			<div class="col-sm-6">
				<label class="" for="input01">Select Zone time</label>  
				<div class="s">  
		          <!--  <%= f.time_zone_select :zone_time, nil, class: "form-control", required: true, placeholder: "Zonetime", style: "margin-bottom:10px" %> -->

			       <%= f.select :zone_time, options_for_select(["-1100", "-1000","-0900", "-0800", "-0700","-0600","-0500", "-0430", "-0400", "-0330", "-0300", "-0200", "-0100", "+0000", "+0100", "+0200", "+0300", "+0330","+0400", "+0430","+0500", "+0530","+0545","+0600","+0630","+0700","+0800","+0900", "+0930","+1000","+1100", "+1200", "+1245","+1300"]), class: "form-control", required: true, width: "100%",  placeholder: "Zonetime", style: "margin-bottom:10px" %>
				</div> 
			</div>
		</div>

		<div class="col-sm-12">
			<div class="col-sm-6">
				<label class="" for="input01">Vessel Name</label>  
				<div class="s">  
	               <%= f.text_field :vessel_name, autofocus: true, class: "form-control", required: true,placeholder: "Vessel Name", style: "margin-bottom:10px" %>
				</div> 
			</div>

			<div class="col-sm-6">
				<label class="" for="input01">Vessel IMO Number</label>  
				<div class="s">  
	               <%= f.number_field :vessel_imo_no, autofocus: true, required: true,class: "form-control", placeholder: "Vessel IMO Number", style: "margin-bottom:10px", min: 1000000, max: 9999999%>
				</div> 
			</div>
		</div>

		<div class="col-sm-12" style="margin-top: 10px;"> 
			<div class="col-sm-6">
				<label class="" for="input01">Captain Name</label>  
				<div class="s">  

	               <%= f.text_field :captain_name, autofocus: true,required: true, class: "form-control", placeholder: "Captain Name", style: "margin-bottom:10px" %>

				</div> 
			</div>

			<div class="col-sm-6">
				<label class="" for="input01">Chief Engineer Name</label>  
				<div class="s">  
	               <%= f.text_field :chief_engineer, autofocus: true, required: true, class: "form-control", placeholder: "Chief Engineer Name", style: "margin-bottom:10px" %>
				</div> 
			</div>

		</div>


		<div class="col-sm-12" style="margin-top: 10px;"> 
			<div class="col-sm-12">
				<label class="" for="input01">Description</label>  
				<div class="s">  
	               <%= f.text_field :description, autofocus: true, class: "form-control",required: true,  placeholder: "Description", style: "margin-bottom:10px" %>
				</div> 
			</div>
		</div>

        <!-- Submit button -->
		<div class="col-sm-12 create_cut_field">
			<div class="col-sm-12">
				<button type="submit" class="btn btn-primary" , id ="create_issue" style="margin-top: 23px;" > Create </button>
			</div>
		</div>

	</div>  
<%end%>