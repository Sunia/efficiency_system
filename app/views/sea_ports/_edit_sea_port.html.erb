<br>

<%= form_for(@sea_port, url: sea_port_path(@sea_port.id) ,html: {method: "patch"}) do |f| %>

	<div class="col-sm-12">
		<div class="col-sm-12">
			<label class="" for="input01">Starting Port Name</label>  

			<div class="s">  
               <%= f.text_field :starting_port_name, autofocus: true, class: "form-control", placeholder: "Starting Port Name", required: true,style: "margin-bottom:10px",:readonly => true %>
			</div> 

		</div>
	</div>
	<div class="col-sm-12" style="margin-top: 10px;"> 
		<div class="col-sm-12">
			<label class="" for="input01">Destination Port Name</label>  
			<div class="s">  
               <%= f.text_field :reached_port_name, autofocus: true, class: "form-control", placeholder: "Destination Port Name",required: true,style: "margin-bottom:10px" %>
			</div> 
		</div>
	</div>

	<div class="col-sm-12">
		<div class="col-sm-12">
			<label class="" for="input01">Vessel Name</label>  

			<div class="s">  
               <%= f.text_field :vessel_name, autofocus: true, required: true, class: "form-control", placeholder: "Vessel Name", style: "margin-bottom:10px", readonly: true %>
			</div> 
		</div>
	</div>

	<div class="col-sm-12" style="margin-top: 10px;"> 
		<div class="col-sm-12">
			<label class="" for="input01">Vessel IMO Number</label>  
			<div class="s">  
               <%= f.number_field :vessel_imo_no, autofocus: true, class: "form-control",required: true, placeholder: "Vessel IMO Number", style: "margin-bottom:10px", min: 1, readonly: true%>
			</div> 
		</div>
	</div>

	<div class="col-sm-12" style="margin-top: 10px;"> 
		<div class="col-sm-6">
			<label class="" for="input01">Captain Name</label>  
			<div class="s">  

               <%= f.text_field :captain_name, autofocus: true, class: "form-control", required: true,placeholder: "Captain Name", style: "margin-bottom:10px" %>

			</div> 
		</div>

		<div class="col-sm-6">
			<label class="" for="input01">Chief Engineer Name</label>  
			<div class="s">  
               <%= f.text_field :chief_engineer, autofocus: true, class: "form-control", required: true, placeholder: "Chief Engineer Name", style: "margin-bottom:10px" %>
			</div> 
		</div>
	</div>


	<div class="col-sm-12" style="margin-top: 10px;"> 
		<div class="col-sm-12">
			<label class="" for="input01">Any Description</label>  
			<div class="s">  
               <%= f.text_field :description, autofocus: true, class: "form-control", required: true, placeholder: "Description", style: "margin-bottom:10px" %>
			</div> 
		</div>
	</div>

	<div class="col-sm-12" style="margin-top: 10px;"> 
		<div class="col-sm-12">
			<label class="" for="input01">Total Reports</label>  
			<div class="s">  
	           <%= f.text_field :total_reports, class: "form-control", required: true, placeholder: "Total Reports", style: "margin-bottom:10px",:readonly => true %>

			</div> 
		</div>
	</div>

	<div class="col-sm-12" style="margin-top: 10px;"> 
		<div class="col-sm-12">
			<label class="" for="input01">Starting date and time in SMT</label>  
			<div class="s">  
	           <%= f.text_field :smt_time, class: "form-control", required: true, placeholder: "Total Reports", style: "margin-bottom:10px",:readonly => true %>
			</div> 
		</div>
	</div>


	<div class="col-sm-12" style="margin-top: 10px;"> 
		<div class="col-sm-12">
			<label class="" for="input01">Starting date and time in UTC</label>  
			<div class="s">  
	           <%= f.text_field :created_at, class: "form-control", required: true, placeholder: "Total Reports", style: "margin-bottom:10px",:readonly => true %>
			</div> 
		</div>
	</div>

	<div class="col-sm-12 create_cut_field">
		<div class="col-sm-12">
			<button type="submit" class="btn btn-primary" , id ="create_issue" style="margin-top: 23px;" > Update </button>
		</div>
	</div>

<%end%>
