<!-- If sea_port reached, then create new 'SeaPort'--> 

<% if @sea_port_reached || @sea_port.blank? %>
  <a href="#create_new_sea_report" data-toggle = "modal" >
    Start new Sailing Report (new Journey between ports)
  </a>

<% else %>
  <% if @open_report %>

    <% if @open_report.is_closed %>
      <%= link_to "Create New Sea Report", new_sea_report_path %>
      <% else %>
      <%= link_to "Open the Last report", edit_sea_report_path(@open_report.id) %>
    <% end %>
  <%else %>
      <a href="#create_new_sea_report" data-toggle = "modal" >Create new Sea Report</a>
  <%end %> 
  <div style="float: right;"> 
    <% if @sea_port %>
      <%= link_to "Reached the Destination Port?", close_sea_passage_path(@sea_port.id), method: :post %>
    <% end %> 
  </div>
<% end %>

<br>
<br>

