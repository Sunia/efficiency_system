<fieldset class="fieldset bg-change">

<h4><b>
Report <%= @count %> from <%= session[:starting_port] %> to <%= session[:reached_port] %>
</b> </h4>
<br>


<div class="nav-sea-report col-md-offset-1">

    <!-- Menu bar-->
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#port_details">Port Details</a></li>
        <li><a data-toggle="tab" href="#help">Operating condition</a></li>
        <li><a data-toggle="tab" href="#help">Weather and Distance</a></li>
