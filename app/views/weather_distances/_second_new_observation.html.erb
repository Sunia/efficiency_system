<table border="1">
    <tr>
      <td class="f-size-8"> Position <br>(latitude/<br>Longitude)</td>
      <td class="f-size-8">Reliable <br>observation</td>

	  	<td class="f-size-8">True wind<br>force(BF)</td>
	  	<td class="f-size-8">True Wind<br>direction</td>

	  	<td class="f-size-8">True Wind<br>speed<br> in Knots</td>
	  	<td class="f-size-8">Wave height <br> in meters(Seas)</td>
      <td class="f-size-8">True Swell Direction</td>
      <td class="f-size-8">True Swell Height</td>
      <td class="f-size-8"> Water depth<br> in meters</td>
      <td class="f-size-8"> Couse over <br>ground.</td>
	  	<td class="f-size-8"> Gyro course</td>
	  	<td class="f-size-8"> Compass course</td>
    </tr>

    <tr>
      <!-- Position -->
      <td><%= text_field_tag "weather[][position]", nil, :required => true, :style => 'width: 100px; font-size: 8px;' %></td>

      <!-- Reliable Observation -->
      <td>
       <select name="passage[][reliable_observation]" style ='width: 50px;font-size: 10px;' >
            <option value="Reliable">Reliable</option>
            <option value="Non-Reliable">Non-Reliable</option>
       </select>
      </td>

      <!-- True wind force(BF) -->
      <td>
        <%= number_field_tag "weather[][true_wind_force]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '99' %>
      </td>

      <!-- True wind direction -->
      <td>
        <%= number_field_tag "weather[][true_wind_dir]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '100' %>
      </td>

      <!-- True wind speed in Knots -->
      <td>
        <%= number_field_tag "weather[][true_wind_speed_knots]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '100' %>
      </td>

      <!-- Wave height in meters(Seas) -->
      <td>
        <%= number_field_tag "weather[][wave_height]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '100' %>
      </td>

      <!-- True Swell Direction (0-359 degrees) -->
      <td>
        <%= number_field_tag "weather[][true_swell_direction]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '100' %>
      </td>

    <!-- True Swell height in meters -->
    <td>
      <%= number_field_tag "weather[][true_swell_height]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '100' %>
    </td>

    <!-- Water depth in meters -->
    <td>
      <%= number_field_tag "weather[][water_depth]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '100' %>
    </td>

    <!-- Couse over ground (0-359) -->
    <td>
      <%= number_field_tag "weather[][couse_over_ground]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '100' %>
    </td>

    <!-- Gyro course (0-359) -->
    <td>
      <%= number_field_tag "weather[][gyro_course]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '100' %>
    </td>

    <!-- Compass course (0-359) -->
    <td>
      <%= number_field_tag "weather[][compass_course]",nil, :required => true, :style => 'width: 94px;',:min=> '0', :max => '100' %>
    </td>

  </tr>

</table>
