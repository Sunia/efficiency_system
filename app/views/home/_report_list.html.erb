<style type="text/css">
.dataTables_filter {
    margin-right: 10px;
}
.dataTables_length{
  margin-left: 15px;
}

.dataTables_wrapper{
  margin-top: 10px;
}
</style>
  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Sea Reports</div>
    <table  class="table  no-margin"cellspacing="0" width="100%" style="margin-top: 10px;">
      <thead>
        <tr style="background-color: #F1EEEE;">

          <th> Sea Port ID</th>
          <th>Vessel Name</th>
          <th> Starting Port </th>
          <th> Destination Port </th>
          <th> Report Number</th>
          <th>Starting Date(SMT)</th>
          <th>Closing Date(SMT)</th>
          <th>Closed Status</th>
          <th>Edit</th>
        </tr>

      </thead>
      <tbody>
        <% if @sea_reports %>
          <% @sea_reports.each do |sea_report| %>
            <tr>
              <% sea_port = SeaPort.find(sea_report.sea_port_id) %>
              <td> <%= sea_port.id %></td>
              <td> <%= sea_port.vessel_name %></td>
              <td> <%= sea_port.starting_port_name %></td>
              <td> <%= sea_port.reached_port_name %></td>
              <td> <%= sea_report.report_number %></td>
              <td> <%= sea_report.opened_time_in_smt %></td>
              <td> <%= sea_report.closed_time_in_smt %></td>
              <td> <%= sea_report.is_closed %></td>

              <td title='Edit the sea report.'%>
                <%= link_to edit_sea_report_path(sea_report) do %>
                    <%= image_tag 'edit-notes.png', style: 'height: 6%;'%>
                <% end %>
              </td>


            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
